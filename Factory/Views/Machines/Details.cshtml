@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.Label("Machine Name:") @Html.DisplayFor(model => model.MachineName)</h3>
<h3>@Html.Label("Machine Status:") @Html.DisplayFor(model => model.MachineStatus)</h3>
<h3>@Html.Label("Machine Installation Date:") @Html.DisplayFor(model => model.InstallationDate)</h3>
@if(@Model.JoinEntities.Count == 0)
{
  <p>This Machine has no engineers.</p>
}
else
{
  <h4>Engineers: </h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Engineer.EngineerName}", "Details", "Engineers", new { id = join.Engineer.EngineerId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add An Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Remove An Engineer", "RemoveEngineer", new { id = Model.MachineId })</p>

<p>@Html.ActionLink("Back To All Machines", "Index")</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>