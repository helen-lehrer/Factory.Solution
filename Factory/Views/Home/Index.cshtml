@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumbotron">
  <h1>Dr. Sillystringz's Factory</h1>
</div>
<div class="row index-list-all">
  <div class="col-6 border-right border-dark" id="index-list-engineers">
    @if (@Model.Count == 0)
      {
        <h3>No engineers have been added yet!</h3>
      } 
    <ul>
      @foreach(Engineer engineer in Model)
      {
        <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", "Engineers", new { id = engineer.EngineerId })</li>
      }
    </ul>
  </div>
  <div class="col-6 border-left border-dark" id="index-list-machines">
    @if (@Model.Count == 0)
      {
        <h3>No machines have been added yet!</h3>
      } 
    <ul>
      @foreach(Machine machine in ViewBag.Machine)
      {
        <li>@Html.ActionLink($"{machine.MachineName}", "Details", "Machines",new { id = machine.MachineId })</li>
      }
    </ul>
  </div>
</div>